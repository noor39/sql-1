--publication table
CREATE TABLE publication(
publication_id NUMBER(3) PRIMARY KEY NOT NULL,
subject_id NUMBER(3) REFERENCES SUBJECT NOT NULL,
author_id NUMBER(3) REFERENCES AUTHOR NOT NULL,
title VARCHAR2(64) UNIQUE NOT NULL);

