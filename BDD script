--subject table
CREATE TABLE subject(
subject_id NUMBER(3) PRIMARY KEY NOT NULL,
parent_id NUMBER(3) REFERENCES SUBJECT NULL,
name VARCHAR2(32) UNIQUE NOT NULL);

